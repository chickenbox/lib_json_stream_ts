{
	"compilerOptions": {
		"target": "ESNext",
		"module": "none",
		"moduleResolution": "classic",
		"strict": true,
		"accessorOptimization": true,
		"reorderFiles": true,
		"outFile": "build/libJsonStream.js",
		"rootDir": "src",
		"jsx": "react",
		"removeComments": true,
		"declaration": true,
		"declarationDir": "build"
	},
	"compileOnSave": true,
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"typing/**/*.d.ts",
		"bower_components/**/*.d.ts"
	],
	"buildOnSave": true
}
